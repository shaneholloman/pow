{
  "name": "@shaneholloman/pow",
  "version": "0.2.1",
  "description": "A CLI tool to manage git main/master branches and cleanup",
  "type": "module",
  "bin": {
    "pow": "./dist/pow.js"
  },
  "files": [
    "dist/pow.js"
  ],
  "scripts": {
    "start": "tsx src/cli.ts",
    "build": "bun build src/cli.ts --outfile dist/pow.js --target node --format esm --banner '#!/usr/bin/env node'",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "test": "npm run test:typecheck && vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:typecheck": "tsc --noEmit"
  },
  "keywords": [
    "git",
    "cli",
    "branch",
    "cleanup",
    "maintenance"
  ],
  "author": "Shane Holloman",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "zx": "^8.8.4"
  },
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shaneholloman/pow.git"
  },
  "bugs": {
    "url": "https://github.com/shaneholloman/pow/issues"
  },
  "homepage": "https://github.com/shaneholloman/pow#readme"
}
